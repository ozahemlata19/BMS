    <Window.Resources>
        <vm:SignupVM x:Key="SignupVm"/>
    </Window.Resources>
    
    <Grid
        DataContext="{StaticResource SignupVm}"
        Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>

            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        
        <Label Content="Name"
               Grid.Row="0"
               Grid.Column="0"
               Style="{StaticResource LabelStyle}"/>
        <TextBox
             Grid.Row="0"
               Grid.Column="1"
            Text="{Binding Name,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>

        <Label Content="UserName"
               Grid.Row="1"
               Grid.Column="0"
               Style="{StaticResource LabelStyle}"/>
        <TextBox 
             Grid.Row="1"
               Grid.Column="1"
            Text="{Binding UserName,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>

        <Label Content="Password"
               Grid.Row="2"
               Grid.Column="0"
               Style="{StaticResource LabelStyle}"/>
        <!--<TextBox Text="{Binding Password,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>-->
        <TextBox 
             Grid.Row="2"
               Grid.Column="1"
            Text="{Binding Password,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>

        <Label Content="Address"               
               Grid.Row="3"
               Grid.Column="0"
               Style="{StaticResource LabelStyle}"/>
        <TextBox 
             Grid.Row="3"
               Grid.Column="1"
            Text="{Binding Address,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>

        <Label Content="State"
               Grid.Row="4"
               Grid.Column="0"
               Style="{StaticResource LabelStyle}"/>
        <TextBox
             Grid.Row="4"
               Grid.Column="1"
            Text="{Binding State,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>

        <Label Content="Country"
                Grid.Row="5"
               Grid.Column="0"
               Style="{StaticResource LabelStyle}"/>
        <TextBox 
             Grid.Row="5"
               Grid.Column="1"
            Text="{Binding Country,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>

        <Label Content="Email Id"
                Grid.Row="0"
               Grid.Column="2"
               Style="{StaticResource LabelStyle}"/>
        <TextBox 
             Grid.Row="0"
               Grid.Column="3"
            Text="{Binding EmailId,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>

        <Label Content="PAN"
                Grid.Row="1"
               Grid.Column="2"
               Style="{StaticResource LabelStyle}"/>
        <TextBox 
             Grid.Row="1"
               Grid.Column="3"
            Text="{Binding PAN,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>

        <Label Content="Contact Number"
                Grid.Row="2"
               Grid.Column="2"
               Style="{StaticResource LabelStyle}"/>
        <TextBox 
             Grid.Row="2"
               Grid.Column="3"
            Text="{Binding ContactNo,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>

        <Label Content="Date Of Birth"
                Grid.Row="3"
               Grid.Column="2"
               Style="{StaticResource LabelStyle}"/>
        <DatePicker
             Grid.Row="3"
               Grid.Column="3"
            SelectedDateFormat="Short"
            SelectedDate="{Binding DOB,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>

        <Label Content="Account Type"
                Grid.Row="4"
               Grid.Column="2"
               Style="{StaticResource LabelStyle}"/>
        <ComboBox
             Grid.Row="4"
               Grid.Column="3"
            SelectedItem="{Binding AccountType,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
            <ComboBoxItem>
                Current
            </ComboBoxItem>
            <ComboBoxItem
            IsSelected="True">
                Saving
            </ComboBoxItem>
        </ComboBox>

        <Button
             Grid.Row="5"
               Grid.Column="2"
            Command="{Binding CreateAccountCommand}"
            Content="|Create Account|"
            Margin="5,10"
            Width="Auto"
            FontSize="16"
            Height="24"
            BorderThickness="0"
            Background="LightGray"
            Foreground="AliceBlue"
            FontWeight="Bold"/>

    </Grid>
</Window>
