<Application x:Class="BMSWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BMSWPF"
             StartupUri="View/LoginWindow.xaml">
    <Application.Resources>
        <!--<SolidColorBrush x:Key="LabelStyle" Color="Cyan"/>
        <SolidColorBrush x:Key="ButtonStyle" Color="Blue"/>-->
        <Style TargetType="Label" x:Key="LabelStyle">
            <Setter Property="Background" Value="Aqua"/>
            <Setter Property="FontSize"  Value="14"/>
        </Style>
        <Style TargetType="Button" x:Key="ButtonStyle">
            <Setter Property="FontSize"  Value="18"/>
        </Style>
        <Style TargetType="Separator" x:Key="SeparatorStyle">
            <Setter Property="Height"  Value="1"/>
            <!--<Setter Property="Background" Value="{StaticResource SeparatorStyle}"/>-->
        </Style>
    </Application.Resources>
</Application>
